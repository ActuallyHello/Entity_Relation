<style>
    .block {
    display: none;
}

.block.active {
    display: block;
}
</style>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        
      </div>

            <label for="select_act"> Выберите действие:</label>
            <select name="select_act" id="select_act">                
                  <option value="add" selected>Добавить</option>
                  <option value="edit">Редактировать</option>
                  <option value="delete">Удалить</option>
            </select>


<div id="add_block" class="block active">
    <h2>Добавление связь</h2>
            <form action="/relation" method="POST">
            
            <input id="name_relation" name="add_relation" placeholder="Название связи">                        
            
            <label for="select_entity"> Выберите левую сущность:</label>
            <select name="add_e_left" id="select_entity_left">
                {{#if e}}
                {{#each e}}
                <option value="{{this.id_entity}}">{{this.name_entity}}</option>
                {{/each}}
                {{/if}}
            </select>
            
            <label for="select_entity"> Выберите мощность связи:</label>
            <select name="add_power" id="select_power">
                <option value="1-1">1-1</option>
                <option value="1-N">1-N</option>                
                <option value="N-1">N-1</option>
                <option value="N-N">N-N</option>
            </select>
            
            <label for="select_entity"> Выберите правую сущность:</label>
            <select name="add_e_right" id="select_entity_right">
                {{#if e}}
                {{#each e}}
                <option value="{{this.id_entity}}">{{this.name_entity}}</option>
                {{/each}}
                {{/if}}
            </select>
            
            
            <label for="select_model"> Выберите модель:</label>
            <select name="add_m" id="select_model">
                {{#if m}}
                {{#each m}}
                <option value="{{this.id_m}}">{{this.name_m}}</option>
                {{/each}}
                {{/if}}
            </select>
            
            <button>OK</button>        
            </form>      
</div>

<div id='edit_block' class="block">
    <h2>Редактирование связи</h2>
            <form action="/relation" method="POST">
            
            <label for="select_relation"> Выберите связь:</label>
            <select name="edit_be" id="select_relation">
                {{#if r}}
                {{#each r}}
                <option value="{{this.id_be}}">{{this.name_m}} {{this.name_be}} {{e_left}} {{power_be}} {{e_right}} {{model}}</option>
                {{/each}}
                {{/if}}
            </select>

            <BR>
            <input id="name_relation" name="edit_relation" placeholder="Название связи">                        
            
            <label for="select_entity"> Выберите левую сущность:</label>
            <select name="edit_e_left" id="select_entity_left">
                {{#if e}}
                {{#each e}}
                <option value="{{this.id_entity}}">{{this.name_entity}}</option>
                {{/each}}
                {{/if}}
            </select>
            
            <label for="select_entity"> Выберите мощность связи:</label>
            <select name="edit_power" id="select_power">
                <option value="1-1">1-1</option>
                <option value="1-N">1-N</option>                
                <option value="N-1">N-1</option>
                <option value="N-N">N-N</option>
            </select>
            
            <label for="select_entity"> Выберите правую сущность:</label>
            <select name="edit_e_right" id="select_entity_right">
                {{#if e}}
                {{#each e}}
                <option value="{{this.id_entity}}">{{this.name_entity}}</option>
                {{/each}}
                {{/if}}
            </select>
            
            
            <label for="select_model"> Выберите модель:</label>
            <select name="edit_m" id="select_model">
                {{#if m}}
                {{#each m}}
                <option value="{{this.id_m}}">{{this.name_m}}</option>
                {{/each}}
                {{/if}}
            </select>
            
            <button>OK</button>
            
            </form>
    
</div>

<div id='delete_block' class="block">

        <h2>Удаление связи</h2>
            <form action="/relation" method="POST">
            
            <label for="select_relation"> Выберите связь:</label>
            <select name="delete_be" id="select_relation">
                {{#if r}}
                {{#each r}}
                <option value="{{this.id_be}}">{{this.name_m}} {{this.name_be}} {{e_left}} {{power_be}} {{e_right}} {{model}}</option>
                {{/each}}
                {{/if}}
            </select>

            
            <button>OK</button>        
            </form>
</div>

<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Модель</th>
              <th>Название связи</th>
              <th>Левая связь</td>
              <th>Мощность связи</td>
              <th>Правая связь</td>
            </tr>
          </thead>
          <tbody>
            {{#each r}}
            <tr>
              <td>{{name_m}}</td>
              <td>{{name_be}}</td>
              <td>{{e_left}}</td>
              <td>{{power_be}}</td>
              <td>{{e_right}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

